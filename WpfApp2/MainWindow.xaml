<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="tb1" HorizontalAlignment="Left" Height="23" Margin="71,60,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tb2" HorizontalAlignment="Left" Height="23" Margin="71,88,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="btnAdd" Content="RadioButton" HorizontalAlignment="Left" Margin="237,60,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="btnMulti" Content="RadioButton" HorizontalAlignment="Left" Margin="237,80,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCalculate" Content="Button" HorizontalAlignment="Left" Margin="71,162,0,0" VerticalAlignment="Top" Width="251" Height="34" Click="btnCalculate_Click"/>
        <TextBox x:Name="tbResult" HorizontalAlignment="Left" Height="23" Margin="71,116,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
